<Window x:Class="KIT206A3WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KIT206A3WPF.Views"
        xmlns:controller="clr-namespace:KIT206A3WPF.Controllers" 
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <local:ResearcherListView Grid.Column="0" x:Name="researcherListView"/>
        <local:ResearcherDetailsView Grid.Column="1" x:Name="researcherDetailsView"/>
    </Grid>
</Window>
